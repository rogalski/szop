{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "definitions":{
        "patient":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "room":{
                    "type":"string"
                },
                "measurements":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/measurement"
                    }
                }
            },
            "required":[
                "name",
                "measurements"
            ]
        },
        "measurement":{
            "type":"object",
            "properties":{
                "min":{
                    "type":[
                        "number",
                        "null"
                    ]
                },
                "max":{
                    "type":[
                        "number",
                        "null"
                    ]
                },
                "value":{
                    "type":[
                        "number"
                    ]
                },
                "name":{
                    "type":"string"
                },
                "unit":{
                    "type":"string"
                },
                "datetime":{
                    "type":"string",
                    "pattern":"\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}"
                }
            },
            "required":[
                "value",
                "name",
                "datetime"
            ]
        }
    },
    "type":"object",
    "properties":{
        "patients":{
            "type":"array",
            "items":{
                "$ref":"#/definitions/patient"
            }
        }
    }
}
